{
  "$schema": "./node_modules/@types/node/package.json",
  "name": "cpu-light",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "rust:check": "cd src-tauri && cargo check",
    "rust:clippy": "cd src-tauri && cargo clippy",
    "rust:format": "cd src-tauri && cargo fmt",
    "rust:test": "cd src-tauri && cargo test",
    "prepare": "node .husky/install.mjs",
    "stylelint-check": "stylelint-config-prettier-check",
    "clean": "rimraf dist && rimraf src-tauri/target",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitlint": "commitlint --config commitlint.config.mjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "npm run build && npx vite-bundle-analyzer dist"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mantine/core": "^8.1.3",
    "@mantine/hooks": "^8.1.3",
    "@react-router/fs-routes": "^7.6.3",
    "@react-router/node": "^7.6.3",
    "@react-router/serve": "^7.6.3",
    "@tabler/icons-react": "^3.34.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "isbot": "^5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.6.3",
    "tailwindcss": "^4.1.11",
    "vite-tsconfig-paths": "^5.1.4",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "@react-router/dev": "^7.6.3",
    "@storybook/react": "^7.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tauri-apps/cli": "^2",
    "@types/node": "^24.0.10",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^1.0.0",
    "c8": "^8.0.0",
    "cz-git": "^1.11.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "git-cz": "^4.9.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "stylelint": "^16.21.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.36.0",
    "vite": "^6.3.5",
    "vitest": "^1.6.1",
    "zustand": "^4.4.0"
  }
}
